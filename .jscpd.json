{
  "threshold": 3,
  "reporters": ["html", "console", "json"],
  "ignore": [
    "**/*.test.py",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/__pycache__/**",
    "**/venv/**",
    "**/.venv/**",
    "**/migrations/**",
    "**/*.config.js",
    "**/*.config.ts"
  ],
  "format": ["python", "typescript", "tsx", "javascript", "jsx"],
  "minLines": 5,
  "minTokens": 50,
  "output": "./reports/duplication",
  "absolute": true,
  "gitignore": true
}

