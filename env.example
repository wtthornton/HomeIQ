HA_MQTT_PORT=1883
HA_MQTT_USERNAME=your_mqtt_username
HA_MQTT_PASSWORD=your_mqtt_password
HA_MQTT_CLIENT_ID=ha-ingestor-dev

# Home Assistant WebSocket Configuration
# Your Home Assistant instance URL
