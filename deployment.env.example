# Deployment Configuration for ha-ingestor
# Copy this file to .env and adjust values for your environment

# Core MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=ha-ingestor
MQTT_KEEPALIVE=60
MQTT_CLEAN_SESSION=true

# MQTT Topics (basic deployment)
MQTT_TOPICS=homeassistant/+/+/state,homeassistant/+/+/+/state

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=your_org_name
INFLUXDB_BUCKET=home_assistant

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance (conservative for deployment)
MQTT_MAX_CONCURRENT_MESSAGES=100
MQTT_MESSAGE_TIMEOUT=30
INFLUXDB_BATCH_SIZE=100
INFLUXDB_FLUSH_INTERVAL=10

# Advanced Features (DISABLED for deployment)
MQTT_ENABLE_PATTERN_MATCHING=false
MQTT_ENABLE_DYNAMIC_SUBSCRIPTIONS=false
MQTT_ENABLE_TOPIC_OPTIMIZATION=false

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics (basic)
ENABLE_METRICS=true
METRICS_PORT=8000
