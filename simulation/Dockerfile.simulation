# Simulation Framework Dockerfile
#
# Separate Dockerfile for simulation framework.
# NOT included in production builds.

FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy simulation source
COPY src/ ./src/
COPY cli.py .
COPY pyproject.toml .

# Set Python path
ENV PYTHONPATH=/app

# Default command
CMD ["python", "cli.py", "--mode", "standard"]

