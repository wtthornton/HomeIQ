# Local Development Environment Configuration
# This file is for local testing without external dependencies

# Home Assistant MQTT Configuration (Local testing)
HA_MQTT_HOST=localhost
HA_MQTT_PORT=1883
HA_MQTT_USERNAME=
HA_MQTT_PASSWORD=
HA_MQTT_CLIENT_ID=ha-ingestor-local

# Home Assistant WebSocket Configuration (Local testing)
HA_WS_URL=ws://localhost:8123/api/websocket
HA_WS_TOKEN=

# InfluxDB Configuration (Local testing)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=myorg
INFLUXDB_BUCKET=home_assistant_events

# Service Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
METRICS_PORT=8000
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8001

# Development Settings
DEBUG=true
TESTING=true

# MQTT Topic Configuration (Local testing)
MQTT_TOPICS=["test/+/+","homeassistant/+/+/+"]

# WebSocket Event Configuration (Local testing)
WS_EVENT_TYPES=["state_changed","event","service_registered"]
