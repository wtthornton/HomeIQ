# Test Environment Configuration Template
# Copy this file to .env.test and fill in your test values
# DO NOT commit .env.test with real secrets!

# Home Assistant Configuration
HA_HTTP_URL=http://localhost:8123
HA_WS_URL=ws://localhost:8123/api/websocket
HA_TOKEN=your_test_ha_token_here

# Nabu Casa Fallback Configuration (Test Values)
NABU_CASA_URL=https://your-test-domain.ui.nabu.casa
NABU_CASA_WS_URL=wss://your-test-domain.ui.nabu.casa/api/websocket
NABU_CASA_TOKEN=your_test_nabu_casa_token_here

# Local Home Assistant Fallback (Optional)
LOCAL_HA_URL=http://localhost:8123
LOCAL_HA_TOKEN=your_test_local_ha_token_here

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_USERNAME=test_admin
INFLUXDB_PASSWORD=your_test_password_here
INFLUXDB_ORG=ha-ingestor
INFLUXDB_BUCKET=home_assistant_events
INFLUXDB_TOKEN=your_test_influxdb_token_here

# Weather API Configuration
WEATHER_API_KEY=your_test_weather_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
WEATHER_LOCATION=Las Vegas,NV,US
WEATHER_DEFAULT_LOCATION=Las Vegas,NV,US
WEATHER_ENRICHMENT_ENABLED=true
WEATHER_CACHE_MINUTES=15

# Logging Configuration
LOG_LEVEL=DEBUG

# Timezone Configuration
TZ=America/Los_Angeles

# Authentication Configuration
JWT_SECRET_KEY=your_test_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_PASSWORD=your_test_admin_password_here

# Data Retention Configuration
CLEANUP_INTERVAL_HOURS=24
MONITORING_INTERVAL_MINUTES=5
COMPRESSION_INTERVAL_HOURS=24
BACKUP_INTERVAL_HOURS=24
BACKUP_DIR=/backups

# Service Configuration
ENABLE_WEATHER_API=true
ENABLE_AUTH=false

# Service Ports
ADMIN_API_PORT=8003
WEBSOCKET_INGESTION_PORT=8001
ENRICHMENT_PIPELINE_PORT=8002
DATA_RETENTION_PORT=8080
HEALTH_DASHBOARD_PORT=3000
WEATHER_API_PORT=8001
INFLUXDB_PORT=8086
HA_SIMULATOR_PORT=8123

# HA Simulator Configuration
SIMULATOR_PORT=8123
SIMULATOR_AUTH_TOKEN=your_test_simulator_token_here
SIMULATOR_HA_VERSION=2025.10.1
SIMULATOR_LOG_LEVEL=DEBUG

# Air Quality Configuration
AIRNOW_API_KEY=your_test_airnow_key_here
LATITUDE=36.1699
LONGITUDE=-115.1398

# Calendar Configuration
CALENDAR_ENTITIES=calendar.primary

# Test Environment Marker
ENVIRONMENT=test
