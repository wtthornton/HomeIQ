# Development Dockerfile with hot-reload
# Epic 31, Story 31.1
FROM python:3.12-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache gcc musl-dev linux-headers curl

# Copy requirements
COPY services/weather-api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source (will be mounted as volume in dev)
COPY services/weather-api/src ./src
COPY shared ./shared

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE 8009

# Run with reload for development
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8009", "--reload"]
