# HA Setup Service Configuration
# NOTE: This service automatically uses infrastructure/.env.websocket for HA_TOKEN
# You don't need to set HA_TOKEN here - it's already configured!

# Service Configuration
SERVICE_NAME=ha-setup-service
SERVICE_PORT=8010
LOG_LEVEL=INFO

# Home Assistant Configuration
HA_URL=http://192.168.1.86:8123
# HA_TOKEN is loaded from infrastructure/.env.websocket (already configured)

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/ha-setup.db

# HA Ingestor API Configuration
DATA_API_URL=http://ha-ingestor-data-api:8006
ADMIN_API_URL=http://ha-ingestor-admin-api:8003

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
INTEGRATION_CHECK_INTERVAL=300

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_INTERVAL=30

