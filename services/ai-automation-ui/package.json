{
  "name": "ai-automation-ui",
  "version": "1.0.0",
  "description": "AI-powered Home Assistant Automation Suggestion System UI",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3001",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test --config ../../tests/e2e/ai-automation-ui/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config ../../tests/e2e/ai-automation-ui/playwright.config.ts",
    "test:e2e:headed": "playwright test --headed --config ../../tests/e2e/ai-automation-ui/playwright.config.ts",
    "test:e2e:debug": "playwright test --debug --config ../../tests/e2e/ai-automation-ui/playwright.config.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium --config ../../tests/e2e/ai-automation-ui/playwright.config.ts",
    "test:e2e:smoke": "playwright test --grep @smoke --config ../../tests/e2e/ai-automation-ui/playwright.config.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.11",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "canvas-confetti": "^1.9.4",
    "chart.js": "^4.5.1",
    "framer-motion": "^11.18.2",
    "highlight.js": "^11.11.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-force-graph": "^1.48.1",
    "react-hot-toast": "^2.5.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.2",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "three": "^0.181.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/three": "^0.181.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.15.0",
    "happy-dom": "^20.0.11",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.15"
  }
}
