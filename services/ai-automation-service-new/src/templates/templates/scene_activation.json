{
  "template_id": "scene_activation",
  "version": 1,
  "description": "Activate a scene based on trigger",
  "required_capabilities": {
    "services": ["scene.turn_on"]
  },
  "parameter_schema": {
    "scene_id": {
      "type": "string",
      "required": true,
      "description": "Scene entity ID (e.g., 'scene.evening')"
    },
    "trigger_type": {
      "type": "string",
      "enum": ["time", "state", "button"],
      "required": true,
      "description": "Type of trigger"
    },
    "trigger_entity": {
      "type": "string",
      "required": false,
      "description": "Entity ID for state/button triggers"
    },
    "trigger_time": {
      "type": "string",
      "format": "HH:MM:SS",
      "required": false,
      "description": "Time for time-based triggers"
    },
    "trigger_state": {
      "type": "string",
      "required": false,
      "description": "State value for state triggers"
    }
  },
  "safety_class": "low",
  "forbidden_targets": [],
  "compilation_mapping": {
    "trigger": {
      "platform": "{{trigger_type}}",
      "entity_id": "{{trigger_entity}}",
      "at": "{{trigger_time}}",
      "to": "{{trigger_state}}"
    },
    "condition": null,
    "action": {
      "service": "scene.turn_on",
      "target": {
        "entity_id": "{{scene_id}}"
      }
    },
    "alias_template": "Activate {{scene_id}}",
    "description_template": "Activate scene {{scene_id}}"
  },
  "examples": [
    {
      "scene_id": "scene.evening",
      "trigger_type": "time",
      "trigger_time": "18:00:00"
    }
  ]
}
