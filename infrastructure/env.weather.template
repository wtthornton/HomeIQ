# Weather API Service Environment Variables
# Epic 31, Story 31.1

# OpenWeatherMap API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_LOCATION=Las Vegas

# Cache Configuration
CACHE_TTL_SECONDS=900        # 15 minutes
FETCH_INTERVAL_SECONDS=300   # 5 minutes (fetch every 5 min)

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Service Configuration
SERVICE_PORT=8009

# InfluxDB Configuration (shared)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=${INFLUXDB_TOKEN}
INFLUXDB_ORG=home_assistant
INFLUXDB_BUCKET=weather_data

# Logging
LOG_LEVEL=INFO
