# Home Assistant WebSocket Configuration
# Copy to .env.websocket and edit values
# Configure through dashboard: http://localhost:3000/configuration

# Primary Home Assistant Configuration
HA_URL=ws://192.168.1.100:8123/api/websocket
HA_TOKEN=your_home_assistant_token_here

# Nabu Casa Fallback Configuration (Optional)
# If primary HA connection fails, automatically fallback to Nabu Casa
NABU_CASA_URL=https://your-domain.ui.nabu.casa
NABU_CASA_TOKEN=your_nabu_casa_token_here

# Local HA Fallback Configuration (Optional)
# Additional fallback for local development
LOCAL_HA_URL=ws://localhost:8123/api/websocket
LOCAL_HA_TOKEN=your_local_ha_token_here

# SSL Verification
HA_SSL_VERIFY=true

# Reconnect delay (seconds)
HA_RECONNECT_DELAY=5

# Connection timeout (seconds)
HA_CONNECTION_TIMEOUT=30

