# InfluxDB Configuration
# Copy to .env.influxdb and edit values
# Configure through dashboard: http://localhost:3000/configuration

# InfluxDB URL (required)
INFLUXDB_URL=http://influxdb:8086

# Access Token (required)
INFLUXDB_TOKEN=your_influxdb_token_here

# Organization (required)
INFLUXDB_ORG=home-assistant

# Bucket (required)
INFLUXDB_BUCKET=ha_events

# Timeout (seconds)
INFLUXDB_TIMEOUT=30

# Batch settings
INFLUXDB_BATCH_SIZE=100
INFLUXDB_FLUSH_INTERVAL=10

